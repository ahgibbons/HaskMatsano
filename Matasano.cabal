name:                Matasano
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/githubuser/Matasano#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author name here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
                     , Set1
                     , Set2
                     , CryptTools
  build-depends:       base >= 4.7 && < 5
                     , containers
                     , bitwise
                     , bytestring
                     , bytestring-read
                     , split
                     , word8
                     , cryptonite
                     , base64-bytestring
                     , random
                     , MonadRandom
  default-language:    Haskell2010

executable Matasano-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , Matasano
                     , bytestring
                     , bytestring-read
                     , split
                     , bitwise
                     , word8
                     , cryptonite
                     , base64-bytestring
                     , random
                     , MonadRandom
  default-language:    Haskell2010

test-suite Matasano-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , Matasano
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/Matasano
